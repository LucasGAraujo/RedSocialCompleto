@model IEnumerable<RedeSocial.Domain.Entities.Relacionamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Amizades</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PerfilA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PerfilB)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.PerfilA.Nome)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.PerfilB.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PerfilIdA">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PerfilIdA">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PerfilIdA">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
