@model IEnumerable<RedeSocial.Domain.Entities.Perfil>

@{
    ViewData["Title"] = "Index";
}

<h1>Todos os Perfils</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
                <td>
                    <img src="@item.Foto" style="max-width:100px" max-height="100px" border-radius="50%"; heigth: auto" />
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="Relacionamentos" asp-route-id="@item.Id">Relacionamentos</a>
            </td>
        </tr>
}
    </tbody>
</table>
